<h5 class="mb-3">
    <b>Lista de habitaciones</b>
</h5>

<%= link_to "Crear", nueva_habitacion_path %>
<div class="card">
    <div class="card-body">
     
        <table class="table table-hover">
        <tr>
            <th class="text-center">Id</th>
            <th>Nombre</th>
            <th>Disponibilidad</th>
            <th>Precio</th>
            <th>Hotel</th>
            <th class="text-center">Acciones</th>
            
        </tr>
            <% @lista_habitaciones.each do |h| %>
                <tr>
                
                    <td class="text-center">
                        <%= h.id %>
                    </td>            
                    <td class="">
                        <%= link_to h.nombre, habitacion_path(h) %>
                    </td>
                    <td class="number-center">
                        <% if h.esta_reservada == true %>
                        ❌
                        <% else %>
                        ✅
                        <% end %>
                    </td>
                     <td class="">
                        <%= h.precio %>
                    </td>
                    <td class="">
                         <%= link_to h.hotel.nombre, hotel_path(h) %>
                    </td>
                    <td class="text-center">
                        <%= link_to "Editar", editar_habitacion_path(h), class: "btn btn-warning boton-redondeado" %> <!-- /habitaciones/4/editar -->
                        <%= link_to "Eliminar", habitacion_path(h), method: :delete, class: "btn btn-danger", data: { confirm: "¿Está seguro que quiere eliminar la habitación?"} %>
                    </td>
                </tr>
            <% end %>


        </table>
    </div>
</div>